/* 作品详情页面 - 现代化设计 */
@import "../../styles/global.wxss";

/* ===== 基础布局 ===== */
.container {
  background: var(--background-color);
  min-height: 100vh;
}

/* ===== 英雄区域 ===== */
.hero-section {
  position: relative;
  background: #fff;
  border-radius: 0 0 24rpx 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.hero-swiper {
  width: 100%;
  height: 70vh;
  max-height: 800rpx;
}

.hero-image {
  width: 100%;
  height: 100%;
  background: #f8f9fa;
}

/* 图片浮层 */
.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 2;
}

.image-counter {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  backdrop-filter: blur(8rpx);
}

.quick-actions {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  pointer-events: auto;
  align-items: flex-end;
}

/* 快捷操作按钮 - 改为胶囊形状 */
.quick-btn {
  min-width: 80rpx;
  height: 56rpx;
  padding: 0 16rpx;
  background: rgba(255, 255, 255, 0.95);
  border: none;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: var(--primary-color);
  backdrop-filter: blur(12rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s ease;
  font-weight: 500;
}

.quick-btn .iconfont {
  font-size: 28rpx;
}

.quick-btn.active {
  background: var(--primary-color);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(70, 92, 136, 0.3);
}

.quick-btn:active {
  transform: scale(0.95);
}

/* ===== 内容区域 ===== */
.content-area {
  padding: 32rpx 24rpx;
}

.info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

/* 作品头部 */
.work-header {
  margin-bottom: 32rpx;
}

.title-section {
  position: relative;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 作品标题编辑区域 */
.title-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.work-title {
  font-size: 42rpx;
  font-weight: 700;
  color: #2c3e50;
  line-height: 1.4;
  flex: 1;
  padding: 8rpx 0;
}

.work-title:active {
  background: rgba(70, 92, 136, 0.05);
}

/* 标题输入框 */
.title-input {
  font-size: 42rpx;
  font-weight: 700;
  color: #2c3e50;
  line-height: 1.4;
  flex: 1;
  background: transparent;
  border: none;
  border-bottom: 2rpx solid var(--primary-color);
  border-radius: 0;
  padding: 8rpx 0;
  min-height: auto;
}

/* 编辑按钮 */
.edit-title-btn {
  width: 64rpx;
  height: 64rpx;
  background: transparent;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #95a5a6;
  transition: all 0.3s ease;
  flex-shrink: 0;
}
.edit-title-btn .iconfont {
  font-size: 36rpx;
}

.edit-title-btn:active {
  background: rgba(70, 92, 136, 0.15);
  transform: scale(0.95);
}

.work-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1;
  min-height: 40rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.tag.primary {
  background: linear-gradient(90deg, #465C88, #2F3E63);
  color: #fff;
}

.tag.success {
  background: var(--success-color);
  color: #fff;
}

.tag.warning {
  background: var(--warning-color);
  color: #fff;
}

.work-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #6c757d;
}

.meta-item .iconfont {
  font-size: 24rpx;
  color: #adb5bd;
}

/* ===== 区块样式 (AI Section) ===== */
.ai-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #e9ecef;
}
/* Header for AI section */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
}
.header-left .iconfont {
  font-size: 28rpx;
  color: var(--primary-color);
}
.copy-btn {
  min-width: 80rpx;
  height: 48rpx;
  padding: 0 16rpx;
  background: rgba(70, 92, 136, 0.08);
  border: 1rpx solid rgba(70, 92, 136, 0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: var(--primary-color);
  transition: all 0.3s ease;
  font-weight: 500;
}
.copy-btn:active {
  background: rgba(70, 92, 136, 0.15);
}

/* AI内容 */
.ai-content {
  background: linear-gradient(135deg, #f8f9ff, #f0f8ff);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid var(--primary-color);
  font-size: 28rpx;
  line-height: 1.6;
  color: #495057;
}

/* ===== 原图对比区域 ===== */
.original-images-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #e9ecef;
}

.image-count {
  font-size: 22rpx;
  color: #868e96;
  background: rgba(0, 0, 0, 0.04);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.original-images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 20rpx;
}

.original-image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8f9fa;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.original-image-item:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.original-image {
  width: 100%;
  height: 100%;
}

.image-type-tag {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(8rpx);
  font-weight: 500;
}

/* 参数网格 */
.params-grid,
.tech-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.param-chip,
.tech-chip {
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  min-width: 120rpx;
  flex: 1;
  max-width: calc(50% - 8rpx);
}

.param-label,
.tech-label {
  display: block;
  font-size: 22rpx;
  color: #6c757d;
  margin-bottom: 4rpx;
}

.param-value,
.tech-value {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-color);
}

/* ===== 可折叠信息组 ===== */
.info-group {
  border-top: 1rpx solid #e9ecef;
  margin-top: 24rpx;
  padding-top: 24rpx;
}

.info-group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.info-group-header:active {
  background-color: #f8f9fa;
}

.info-group-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
}

.info-group-title .iconfont {
  font-size: 28rpx;
  color: var(--primary-color);
}

.info-group-summary {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #6c757d;
}

.info-group-summary .iconfont {
  font-size: 24rpx;
  color: #adb5bd;
  transition: transform 0.3s ease;
}

.info-group-content {
  padding-top: 20rpx;
  /* Basic animation can be added with JS or more complex CSS */
}

/* ===== 操作区域 ===== */
.action-area {
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  position: sticky;
  bottom: 0;
  z-index: 10;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.primary-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.secondary-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

.action-btn {
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  text-align: center;
  line-height: 1;
  box-sizing: border-box;
  white-space: nowrap;
  padding: 0 16rpx;
}

.action-btn .iconfont {
  font-size: 32rpx;
  flex-shrink: 0;
}

/* 强制覆盖原生按钮的 ::after，避免默认椭圆与描边 */
.action-btn::after {
  border: none !important;
  border-radius: 16rpx !important;
}

.action-btn.secondary::after,
.action-btn.ghost::after,
.action-btn.danger::after {
  border: none !important;
  border-radius: 16rpx !important;
}

/* 主按钮 - 使用强调色橙色渐变 */
.action-btn.primary {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #FF7A30 0%, #FF9A5C 100%);
  color: white;
  font-weight: 600;
  box-shadow: 0 6rpx 16rpx rgba(255, 122, 48, 0.25);
  font-size: 28rpx;
}

.action-btn.primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.action-btn.primary:active::before {
  left: 100%;
}

/* 次按钮 - 使用主色调蓝色 */
.action-btn.secondary {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255,255,255,0.9);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  font-weight: 600;
  font-size: 28rpx;
}

/* 幽灵按钮 - 透明背景 */
.action-btn.ghost {
  height: 80rpx;
  line-height: 80rpx;
  background: transparent;
  color: #7f8c8d;
  font-size: 26rpx;
  font-weight: 500;
}

/* 危险按钮 - 红色 */
.action-btn.danger {
  height: 80rpx;
  line-height: 80rpx;
  background: transparent;
  color: var(--error-color);
  font-size: 26rpx;
  font-weight: 500;
}

/* 按钮激活状态 */
.action-btn:active {
  transform: scale(0.98);
}

.action-btn.primary:active {
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 48, 0.4);
}

.action-btn.secondary:active {
  background: rgba(70, 92, 136, 0.1);
  transform: scale(0.98);
}

.action-btn.ghost:active,
.action-btn.danger:active {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(0.98);
}

/* ===== 图片查看器 ===== */
.image-viewer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.viewer-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.viewer-swiper {
  width: 100%;
  height: 100%;
}

.viewer-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

/* 滤镜效果 */




.close-btn {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.7);
  border: none;
  border-radius: 50%;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(12rpx);
  transition: all 0.3s ease;
}

.close-btn:active {
  background: rgba(0, 0, 0, 0.9);
  transform: scale(0.95);
}



/* ===== 响应式优化 ===== */
@media (max-width: 375px) {
  .hero-swiper {
    height: 60vh;
  }

  .content-area {
    padding: 24rpx 16rpx;
  }

  .info-card {
    padding: 24rpx;
  }

  .work-title {
    font-size: 32rpx;
  }

  .primary-actions {
    flex-wrap: wrap;
    gap: 16rpx;
  }

  /* These responsive rules are no longer needed for secondary actions. */
}

/* ===== 动画效果 ===== */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.info-card {
  animation: slideUp 0.4s ease-out;
}

.action-area {
  animation: slideUp 0.5s ease-out;
}

/* ===== 深色模式支持 ===== */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #1a1a1a 0%, #2d2d2d 100%);
  }

  .info-card,
  .action-area {
    background: #2d2d2d;
    color: #e9ecef;
  }

  .work-title {
    color: #f8f9fa;
  }

  .param-chip,
  .tech-chip {
    background: #343a40;
    border-color: #495057;
  }

  .param-value,
  .tech-value {
    color: #e9ecef;
  }
}

/* ========== 🎭 姿势裂变弹窗样式 ========== */
.pose-variation-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  padding: 40rpx 40rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 40rpx;
}

/* 模式选择器 */
.mode-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.mode-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border: 3rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: #fafafa;
  transition: all 0.3s;
}

.mode-option.active {
  border-color: #4A90E2;
  background: #f0f7ff;
}

.mode-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.mode-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.mode-option.active .mode-name {
  color: #4A90E2;
}

/* 姿势预设列表 */
.pose-presets {
  min-height: 400rpx;
}

.loading-poses {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  color: #999;
  font-size: 28rpx;
}

.pose-scroll {
  max-height: 500rpx;
}

.pose-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  background: #ffffff;
  transition: all 0.2s;
}

.pose-item.selected {
  border-color: #4A90E2;
  background: #f0f7ff;
}

.pose-emoji {
  font-size: 44rpx;
  margin-right: 20rpx;
}

.pose-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.pose-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.pose-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.pose-item .icon-check {
  font-size: 36rpx;
  color: #4A90E2;
  margin-left: 12rpx;
}

/* 自定义输入 */
.custom-input {
  position: relative;
}

.pose-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #fafafa;
}

.pose-textarea:focus {
  border-color: #4A90E2;
  background: #ffffff;
}

.char-count {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  font-size: 24rpx;
  color: #999;
}

/* 积分提示 */
.credit-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  margin-top: 30rpx;
  background: linear-gradient(135deg, #fff8e1 0%, #ffe0b2 100%);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #f57c00;
}

.credit-info .icon-coin {
  font-size: 32rpx;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 2rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #ffffff;
}

.modal-btn.confirm[disabled] {
  background: #e0e0e0;
  color: #999;
}

/* 高亮按钮样式（姿势裂变按钮） */
.action-btn.highlight {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #FFB84D 0%, #FFD966 100%);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 6rpx 16rpx rgba(255, 184, 77, 0.25);
  font-size: 28rpx;
}

.action-btn.highlight:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 184, 77, 0.3);
}