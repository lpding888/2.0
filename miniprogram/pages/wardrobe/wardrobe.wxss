/* 我的衣柜页面样式 */
@import "../../styles/global.wxss";

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  position: relative;
  overflow: hidden;
}

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0 20rpx;
  position: relative;
  z-index: 2;
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  border: none;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 内容区域 */
.content-area {
  padding-bottom: 40rpx;
  position: relative;
  z-index: 2;
}

/* 操作栏 */
.action-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.filter-tabs {
  display: flex;
  gap: 12rpx;
  flex: 1;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.filter-tab {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  background: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #7f8c8d;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  margin-left: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 服装网格 */
.clothing-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.clothing-item {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.clothing-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.clothing-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.clothing-info {
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #ecf0f1;
}

.clothing-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.clothing-category {
  display: block;
  font-size: 24rpx;
  color: #95a5a6;
}

.clothing-actions {
  display: flex;
  padding: 12rpx;
  gap: 8rpx;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  background: #667eea;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.action-btn.delete {
  background: #e74c3c;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #ecf0f1;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #95a5a6;
}

/* 页面滑入动画 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-slide-up {
  animation: slideUp 0.4s ease-out;
}
