/* 我的衣柜页面样式 - 人性化增强版 - 简约白色+橘色点缀 */
@import "../../styles/global.wxss";

.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 20rpx 20rpx 120rpx;
  position: relative;
  overflow: hidden;
}

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0 20rpx;
  position: relative;
  z-index: 2;
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 搜索框 */
.search-bar {
  margin-bottom: 24rpx;
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
  line-height: 1;
}

/* 视图模式切换 */
.view-mode-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.mode-tab.active {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 48rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.3);
  border: none;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 内容区域 */
.content-area {
  padding-bottom: 40rpx;
}

/* 筛选区域 */
.filter-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  width: 80rpx;
  flex-shrink: 0;
}

.filter-scroll {
  flex: 1;
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  gap: 12rpx;
}

.filter-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.filter-tab.active {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  border-color: transparent;
}

.filter-tab .tab-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.filter-tab.active .tab-icon {
  filter: brightness(2);
}

.filter-tab .tab-label {
  font-size: 24rpx;
  color: #666;
}

.filter-tab.active .tab-label {
  color: #fff;
  font-weight: 600;
}

/* 操作栏 */
.action-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.sort-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
}

.sort-icon {
  font-size: 28rpx;
  color: #FF9A56;
  margin-right: 8rpx;
}

.sort-text {
  font-size: 26rpx;
  color: #666;
}

.action-btns {
  display: flex;
  gap: 12rpx;
}

.icon-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: 1rpx solid #e0e0e0;
}

.icon-btn.primary {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.3);
}

/* 服装网格 */
.clothing-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.clothing-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.clothing-card:active {
  transform: scale(0.98);
}

.favorite-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  z-index: 2;
}

.clothing-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.color-tag {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  z-index: 2;
}

.color-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.clothing-info {
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.clothing-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.clothing-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.use-count {
  font-size: 22rpx;
  color: #FF9A56;
  font-weight: 600;
  padding: 4rpx 12rpx;
  background: #fff9f0;
  border-radius: 12rpx;
  margin-left: 8rpx;
}

.clothing-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.clothing-category {
  font-size: 24rpx;
  color: #999;
}

.season-icons {
  display: flex;
  gap: 4rpx;
}

.season-mini-icon {
  font-size: 20rpx;
}

.clothing-actions {
  display: flex;
  padding: 12rpx;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.use-btn {
  background: #FF9A56;
  color: #fff;
}

.use-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.delete-btn {
  background: #e74c3c;
  color: #fff;
}

/* 套装网格 */
.outfit-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

.outfit-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.outfit-preview {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150rpx, 1fr));
  gap: 4rpx;
  background: #f8f9fa;
  padding: 4rpx;
}

.outfit-item-image {
  width: 100%;
  height: 180rpx;
  object-fit: cover;
  border-radius: 8rpx;
}

.outfit-info {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.outfit-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.outfit-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.outfit-count {
  font-size: 24rpx;
  color: #999;
}

.outfit-actions {
  display: flex;
  padding: 12rpx;
  gap: 12rpx;
}

/* 浮动添加按钮 */
.floating-add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.4);
  z-index: 100;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #ecf0f1;
  border-top-color: #FF9A56;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 排序菜单 */
.sort-menu {
  width: 100%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 24rpx;
  animation: slideUp 0.3s ease;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  transition: all 0.3s;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-item.active {
  color: #FF9A56;
  font-weight: 600;
}

.check-icon {
  font-size: 32rpx;
  color: #FF9A56;
}

/* 套装创建弹窗 */
.outfit-modal {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

.outfit-select-list {
  flex: 1;
  padding: 16rpx;
}

.outfit-select-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 12rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s;
  position: relative;
}

.outfit-select-item.selected {
  background: #fff;
  border: 2rpx solid #FF9A56;
}

.select-item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.select-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.select-item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.select-item-category {
  font-size: 24rpx;
  color: #999;
}

.select-check {
  width: 48rpx;
  height: 48rpx;
  background: #FF9A56;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.modal-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  background: #fff;
}

.selected-count {
  font-size: 26rpx;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  border-radius: 24rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 86, 0.3);
}

/* 页面滑入动画 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.page-slide-up {
  animation: slideUp 0.4s ease-out;
}
