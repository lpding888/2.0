/* 管理中心 - 与整体风格统一 */

.container {
  min-height: 100vh;
  background: #E9E3DF;
  padding: 0;
  padding-bottom: 40rpx;
}

/* ========== 头部区域 ========== */
.header {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  padding: 60rpx 32rpx 48rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 50%;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  position: relative;
  z-index: 1;
}

/* ========== 标签页导航 ========== */
.tab-bar {
  display: flex;
  background: white;
  padding: 8rpx;
  margin: -32rpx 24rpx 0;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  position: relative;
  z-index: 2;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  flex: 1;
  min-width: 100rpx;
  padding: 16rpx 12rpx;
  text-align: center;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab-item.active {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  box-shadow: 0 4rpx 16rpx rgba(70, 92, 136, 0.3);
}

.tab-icon {
  display: block;
  font-size: 28rpx;
  margin-bottom: 4rpx;
  transition: transform 0.3s ease;
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  display: block;
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
  transition: color 0.3s ease;
}

.tab-item.active .tab-text {
  color: white;
  font-weight: 600;
}

/* ========== 内容区域 ========== */
.tab-content {
  padding: 32rpx 24rpx;
}

/* ========== 区块头部 ========== */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #FF7A30 0%, #FF9A5C 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  padding: 16rpx 28rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 48, 0.3);
  transition: all 0.3s ease;
}

.add-btn::after {
  border: none;
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 122, 48, 0.3);
}

.btn-icon {
  font-size: 24rpx;
}

/* ========== AI模型列表 ========== */
.model-list, .prompt-list, .scene-list, .package-list, .user-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.model-item, .prompt-item, .scene-item, .package-item, .user-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.model-item:active, .prompt-item:active, .scene-item:active,
.package-item:active, .user-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* ========== AI模型项 ========== */
.model-item.active {
  border-left: 6rpx solid #22C55E;
}

.model-item.inactive {
  border-left: 6rpx solid #EF4444;
  opacity: 0.7;
}

.model-info, .prompt-info, .scene-info, .package-info, .user-info {
  margin-bottom: 20rpx;
}

.model-header, .prompt-header, .scene-header, .package-header, .user-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

.model-name, .prompt-name, .scene-name, .package-name, .user-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  flex: 1;
}

.model-status, .scene-status, .package-status, .user-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  white-space: nowrap;
}

.model-status.active, .scene-status.enabled, .package-status.active, .user-status.active {
  background: rgba(34, 197, 94, 0.15);
  color: #22C55E;
}

.model-status.inactive, .scene-status.disabled, .package-status.inactive, .user-status.inactive {
  background: rgba(239, 68, 68, 0.15);
  color: #EF4444;
}

.model-desc, .prompt-desc, .scene-desc, .package-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.model-meta, .scene-meta, .user-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 12rpx;
  background: rgba(70, 92, 136, 0.08);
  border-radius: 12rpx;
}

/* ========== 操作按钮 ========== */
.model-actions, .prompt-actions, .scene-actions, .package-actions, .user-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 140rpx;
  height: 64rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  border: none;
}

.action-btn.edit {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

.action-btn.toggle {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(70, 92, 136, 0.3);
}

.action-btn.delete {
  background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 65, 108, 0.3);
}

.action-btn:active {
  transform: scale(0.95);
}

/* ========== 提示词特殊样式 ========== */
.prompt-category {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #FF7A30 0%, #FF9A5C 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.prompt-template, .prompt-variables {
  margin-top: 12rpx;
  padding: 16rpx;
  background: rgba(70, 92, 136, 0.05);
  border-radius: 12rpx;
  border-left: 4rpx solid #465C88;
}

.template-label, .variables-label {
  font-size: 22rpx;
  color: #465C88;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.template-content, .variables-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

/* ========== 套餐特殊样式 ========== */
.package-popular {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #f7971e 0%, #ffd200 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.package-details {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.detail-label {
  color: #666;
}

.detail-value {
  font-weight: 600;
  color: #000000;
}

.detail-value.original-price {
  text-decoration: line-through;
  color: #999;
}

.detail-value.discount {
  color: #FF7A30;
}

/* ========== 用户管理特殊样式 ========== */
.filter-controls {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.search-input {
  padding: 16rpx 24rpx;
  background: white;
  border-radius: 48rpx;
  border: 2rpx solid #ecf0f1;
  font-size: 26rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-buttons {
  display: flex;
  gap: 12rpx;
}

.filter-btn {
  flex: 1;
  padding: 12rpx 20rpx;
  background: white;
  color: #666;
  border: 2rpx solid #ecf0f1;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.filter-btn::after {
  border: none;
}

.filter-btn.active {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
  border-color: transparent;
  box-shadow: 0 4rpx 12rpx rgba(70, 92, 136, 0.3);
}

.user-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  border: 4rpx solid rgba(70, 92, 136, 0.1);
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  margin-bottom: 0;
}

.user-id {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.user-actions {
  flex-shrink: 0;
}

/* ========== 数据统计 ========== */
.export-controls {
  display: flex;
  gap: 12rpx;
}

.export-btn {
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

.export-btn::after {
  border: none;
}

.statistics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.stat-icon {
  font-size: 48rpx;
}

.stat-content {
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #465C88;
  margin-bottom: 4rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* ========== 加载和空状态 ========== */
.loading, .empty-state {
  padding: 120rpx 0;
  text-align: center;
  color: #999;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* ========== 弹窗样式 ========== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 90%;
  max-width: 640rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  cursor: pointer;
  border-radius: 50%;
  transition: background 0.3s ease;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.2);
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #ecf0f1;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel::after, .btn-confirm::after {
  border: none;
}

.btn-cancel {
  background: white;
  color: #666;
  border: 2rpx solid #ecf0f1;
}

.btn-cancel:active {
  background: #f8f9fa;
}

.btn-confirm {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(70, 92, 136, 0.3);
}

.btn-confirm:active {
  transform: scale(0.98);
}

/* ========== 表单样式 ========== */
.form-section {
  margin-bottom: 40rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid rgba(70, 92, 136, 0.08);
}

.form-section:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.form-section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #465C88;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #465C88;
  display: flex;
  align-items: center;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #000000;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.char-count {
  float: right;
  font-size: 22rpx;
  color: #999;
  font-weight: 400;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #000000;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus, .form-textarea:focus {
  background: white;
  border-color: #465C88;
  box-shadow: 0 0 0 4rpx rgba(70, 92, 136, 0.1);
}

.form-textarea {
  min-height: 120rpx;
  max-height: 300rpx;
}

.form-textarea.extra-large {
  min-height: 200rpx;
  max-height: 400rpx;
}

.form-textarea-url {
  min-height: 100rpx;
  max-height: 200rpx;
  font-size: 24rpx;
  line-height: 1.5;
  word-break: break-all;
}

.form-tips {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: rgba(79, 172, 254, 0.08);
  border-radius: 12rpx;
  border-left: 4rpx solid #4facfe;
}

.tips-icon {
  font-size: 24rpx;
}

.tips-text {
  flex: 1;
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
}

.picker-display {
  padding: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #000000;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-display::after {
  content: '▼';
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

.show-password {
  position: absolute;
  right: 52rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  cursor: pointer;
}

.form-group {
  position: relative;
}

slider {
  width: 100%;
}

/* ========== 提示文字样式 ========== */
.category-tips, .template-tips {
  margin-top: 12rpx;
  padding: 16rpx;
  background: rgba(255, 122, 48, 0.08);
  border-radius: 12rpx;
  border-left: 4rpx solid #FF7A30;
}

.tips-small {
  font-size: 22rpx;
  color: #666;
}

.tips-title {
  font-size: 24rpx;
  color: #FF7A30;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.tips-item {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.8;
}

/* ========== 双列表单布局 ========== */
.form-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 28rpx;
}

.form-group.half {
  flex: 1;
  margin-bottom: 0;
}

/* ========== 开关行 ========== */
.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #000000;
  font-weight: 600;
}

/* ========== 响应式设计 ========== */
@media (max-width: 375px) {
  .statistics-grid {
    grid-template-columns: 1fr;
  }

  .tab-bar {
    padding: 6rpx;
  }

  .tab-item {
    padding: 12rpx 8rpx;
  }

  .tab-icon {
    font-size: 24rpx;
  }

  .tab-text {
    font-size: 20rpx;
  }
}